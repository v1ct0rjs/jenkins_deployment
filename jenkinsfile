pipeline {
    agent any

    environment {
        DOCKERHUB_PASS = credentials('dockerhub-pass') 
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'http://gitlab/root/ci-demo.git', branch: 'main', credentialsId: 'gitlab-token-creds'
            }
        }
        stage('Build & Push Docker Images') {
            steps {
                sh 'chmod +x build_and_push.sh'
                sh './build_and_push.sh'
            }
        }
        stage('Verify Images') {
            steps {
                sh 'docker images | grep \"$DOCKERHUB_USER\"'
            }
        }
    }
}
